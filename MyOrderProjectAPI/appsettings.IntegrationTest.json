{
  "LogLevel": {
    // 1. Genel uygulama seviyesini Warning'e ayarla.
    "Default": "Warning",

    // 2. Microsoft Kütüphanelerini kısıtla (ASIL ÇÖZÜM BURADA)
    // Warning/Error'a ayarlamak 2xx durum kodlarının loglanmasını engelle.
    "Microsoft": "Warning",

    // 3. Hosting/HTTP Server seviyesini Critical'a kadar yükselt.
    // Request/Response döngüsü loglarını büyük ölçüde azalt.
    "Microsoft.Hosting.Lifetime": "Information",
    "Microsoft.AspNetCore": "Warning",
    "Microsoft.AspNetCore.Hosting.Internal": "Warning",

    // 4. Kendi uygulamanızın namespace'ini Info'da tutun (Opsiyonel)
    // Kendi iş mantığınızdaki Info'ları görmek isterseniz, sadece kendi namespace'inizi Info'da tut.
    "MyOrderProjectAPI": "Information"
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecurityKey": "MyOrderPorjectForIzmirBuyukSehirBelediyesiDenemeProjesi",
    "ValidIssuer": "MyOrderProjectAPI",
    "ValidAudience": "MyOrderProjectAPIClient"
  }
}
